@model IEnumerable<OEWebApplicationApp.Models.ImageModel>

@{
    ViewData["Title"] = "Images";
}

<div class="container-fluid boxShadow">
    <div class="row">
        <div class="col-4 text-center"><h3>Images for @ViewData["MyRequestId"]</h3></div>
        <div class="col-4 text-center"></div>
        <div class="col-4 ">
            <p>
                <a asp-action="Create" asp-route-id="@ViewData["MyRequestId"]"><h4>Upload an Image</h4></a>
                <a class="" asp-action="Index" asp-controller="Request"><h4>Back to Index</h4></a>
            </p>
        </div>
    </div>
</div>
<hr />
@if (TempData["Info Message"] != null)
{
    <div class="container d-flex justify-content-center bg-info boxShadow">
        <div class="row">
            <div class="" id="top">
                <h2 class="text-black"><strong>@TempData["Info Message"]</strong></h2>
            </div>
        </div>
    </div>
    <hr />
}
<table class="table table-striped table-bordered table-hover boxShadow">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a href="file:@item.Path" target="_blank">View</a>
                    <a href="file:~/wwwroot/Files/12652.pdf" target="_blank" >View2</a>
            </td>
        </tr>
}
    </tbody>
</table>

