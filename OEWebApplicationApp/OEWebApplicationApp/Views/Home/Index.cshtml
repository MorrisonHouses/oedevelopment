@{
    ViewData["Title"] = "Home Page";
}

<h4>Home Page</h4>
<div class="container-fluid justify-content-center">
    <div class="row">
        <div class="col-4">
            <a class="m-4 p-2" asp-area="approver_button" asp-controller="Approval" asp-action="Index" onkeyup="manage(this)"><h4>Approvals</h4></a>
            <h5 class="" id="">Requester:  @ViewBag.ApproverBool</h5>
        </div>
        <div class="col-4">
            <a class="m-4 p-2" asp-area="requester_button" asp-controller="Request" asp-action="GetRequest"><h4>Requests</h4></a>
            <h5 class="" id="">Requester:  @ViewBag.RequesterBool</h5>
        </div>
        <div class="col-4">
            <a class="m-4 p-2" asp-area="" asp-controller="Settings" asp-action="Index"><h4>Settings</h4></a>
        </div>
    </div>
</div>
